# ── Database ─────────────────────────────────────────────────────────────────
# PostgreSQL connection string.
# On Railway: automatically provided when you add the PostgreSQL plugin.
DATABASE_URL="postgresql://user:password@localhost:5432/rsvp_db"

# ── Security ──────────────────────────────────────────────────────────────────
# Random string used to sign session tokens and the admin cookie.
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="replace-with-a-long-random-string-at-least-32-chars"

# Password to access the /admin dashboard.
ADMIN_PASSWORD="replace-with-a-strong-admin-password"

# ── Twilio SMS ────────────────────────────────────────────────────────────────
# Find these in your Twilio Console: https://console.twilio.com
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
# The Twilio phone number that sends SMS (must be in E.164 format)
TWILIO_PHONE_NUMBER="+1xxxxxxxxxx"

# ── Uploadthing (file uploads) ────────────────────────────────────────────────
# Get your token from https://uploadthing.com → create an app → copy the token.
UPLOADTHING_TOKEN="your_uploadthing_token"

# ── App ───────────────────────────────────────────────────────────────────────
# Public URL of the deployed app (used for absolute URL generation).
# Set this after you get a Railway domain or custom domain.
NEXT_PUBLIC_APP_URL="https://your-app.railway.app"
